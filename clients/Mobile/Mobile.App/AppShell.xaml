<?xml version="1.0" encoding="UTF-8"?>

<Shell
    x:Class="Mobile.App.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Mobile.App"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Search" Icon="search_page_icon.png">
            <ShellContent ContentTemplate="{DataTemplate local:SearchPage}" />
        </Tab>
        <Tab Title="Register" Icon="register_page_icon.png">
            <ShellContent ContentTemplate="{DataTemplate local:RegisterPage}" />
        </Tab>
    </TabBar>

</Shell>