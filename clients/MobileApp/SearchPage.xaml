<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileApp.SearchPage">
    <StackLayout Padding="20" Spacing="10">
        <Label HorizontalTextAlignment="Center"
               TextColor="Black"
               FontSize="38"
               Text="Search Engine Project"
               LineBreakMode="WordWrap"
               FontFamily="Lobster-Bold"
               FontAttributes="Bold"
               Margin="0,0,0,50">
        </Label>
        
        <SearchBar x:Name="InputBar"
                   Placeholder="Enter search term..."
                   SearchButtonPressed="InputBar_OnSearchButtonPressed"
                   BackgroundColor="White"
                   TextColor="Black"
                   PlaceholderColor="Gray"
                   CancelButtonColor="Blue" />

        <Button Text="I Feel Lucky"
                x:Name="LuckyButton" Clicked="LuckyButton_OnClicked" />

    </StackLayout>
</ContentPage>